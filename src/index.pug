                    .row
                        .col-md-5
                            img(src="images/about/mockup7.png" class="img-fluid"  alt="About Image")
                        .col-md-7
                            .row
                                .col-md-6.col-lg-4
                                    .about-info
                                        i(class="fa fa-cog" aria-hidden="true")
                                        h6 Customizability
