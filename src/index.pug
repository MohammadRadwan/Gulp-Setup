include pug/includes/variables
include pug/includes/mixins

doctype
html(lang="en")
    head
        //- Start Meta
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name = "description", content="Pug Project")
        //- End Meta
        //- Start Title
        title #{indexTitle}
        //- End Title
        //- Start Styles
        include pug/includes/styles
        //- End Styles
    body
        //- Start Header
        include pug/pages/header
        //- End Header

        //- Start Main-Content
        main.home-content
            section.home-banner
                .container
                    //- Start Interface
                    .row
