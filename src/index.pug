include pug/includes/variables
include pug/includes/mixins

doctype
html(lang="en")
    head
        //- Start Meta
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name = "description", content="Pug Project")
        //- End Meta
        //- Start Title
        title #{indexTitle}
        //- End Title
        //- Start Styles
        include pug/includes/styles
        //- End Styles
    body
        //- Start Header
        include pug/pages/header
        //- End Header

        //- Start Main-Content
        main.home-content
            section.home-banner
                .container
                    //- Start Interface
                    .row
                        .col-md-7.col-lg-6
                            //- Left
                            .home-info
                                h1 App That <br>Suits You Better
                                p.subtitle inappropriate behavior is often laughed off as “boys will be boys,” women face higher conduct standards.
                                .store-btn
                                    a(href="#" class="active")
                                        i(class="fa fa-apple" aria-hidden="true")
                                        | App Store
                                    a(href="#")
                                        i(class="fa fa-android" aria-hidden="true")
                                        | Google Play
                        .col-md-3.offset-lg-2.col-lg-4
                            //- Right
                            .home-image
                                img(class="img-fluid" src="images/header/mockup1.png" alt="Interface Image")
                    //- End Interface

            //- Start Features
            section.features.text-center
                .container
                    h2 Features You Love
                    .row
                        .col-md-4
                            .features-info
                                i(class="fa fa-smile-o" aria-hidden="true")
